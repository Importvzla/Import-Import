<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <template id="middle_section_usd">
            <table class="table table-sm table-borderless table-condensed" name="invoice_line_table">
                <thead>
                    <tr style="border-bottom: 1px solid black;">
                        <th name="th_code" class="text-left"><span>Código</span></th>
                        <th name="th_quantity" class="text-right"><span>Cantidad</span></th>
                        <th name="th_description" class="text-left"><span>Descripción</span></th>
                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio Unitario</span></th>
                        <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Total</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Precio Total</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-if="o.currency_id.name == 'USD'">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                            <t t-set="precio_unitario" t-value="line.price_unit"/>
                            <t t-set="descuento" t-value="line.discount"/>
                            <t t-set="line_subtotal" t-value="line.price_subtotal"/>
                            <t t-set="line_total" t-value="line.price_total"/>
                        </t>
                        <t t-else="">
                            <t t-set="current_subtotal" t-value="(current_subtotal + line.price_subtotal) / o.x_tasa" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="(current_subtotal + line.price_total) / o.x_tasa" groups="account.group_show_line_subtotals_tax_included"/>
                            <t t-set="precio_unitario" t-value="line.price_unit / o.x_tasa"/>
                            <t t-set="descuento" t-value="line.discount / o.x_tasa"/>
                            <t t-set="line_subtotal" t-value="line.price_subtotal / o.x_tasa"/>
                            <t t-set="line_total" t-value="line.price_total / o.x_tasa"/>
                        </t>
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
<!--                                                <td name="item"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>-->
                                <td name="code"><span t-field="line.product_id.default_code" t-options="{'widget': 'text'}"/></td>
                                <td class="text-right">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td name="account_invoice_line_name"><span t-field="line.product_id.name" t-options="{'widget': 'text'}"/></td>
                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-esc="'{0:,.2f}'.format(precio_unitario).replace('.', ' ').replace(',', '.').replace(' ', ',')"/>
                                </td>
                                <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-esc="descuento" t-options='{"widget": "monetary", "display_currency": currency_obj}'/>
                                </td>
                                <!--<td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                </td>-->
                                <td class="text-right o_price_total" style="width: 15%">
                                    <span class="text-nowrap" t-esc="line_subtotal" groups="account.group_show_line_subtotals_tax_excluded" t-options='{"widget": "monetary", "display_currency": currency_obj}'/>
                                    <span class="text-nowrap" t-esc="line_total" groups="account.group_show_line_subtotals_tax_included" t-options='{"widget": "monetary", "display_currency": currency_obj}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": currency_obj}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <t t-if="o.reversed_entry_id">
                <div class="row" style="line-height: 80%">
                    <div class="col-3"/>
                    <div class="col-7">
                        <table class="table table-sm table-borderless table-condensed">
                            <tr>
                                <td>
                                    <span>Doc. Orig</span>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.reversed_entry_id.x_tipodoc"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>Num. Orig</span>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.reversed_entry_id.ref"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>Fecha de Emision</span>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.reversed_entry_id.invoice_date"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>Monto del Documento de Origen</span>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.reversed_entry_id.amount_total"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span>FECHA VALOR B.C.V</span>
                                    <span t-field="o.reversed_entry_id.invoice_date"/>
                                    <span>TASA B.C.V Bs/USD</span>
                                    <span t-field="o.reversed_entry_id.x_tasa"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-2"/>
                </div>
            </t>
        </template>

        <template id="lower_section_usd">

